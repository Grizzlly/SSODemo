@page
@model ExternalLoginModel


<div class="mud-container mud-container-maxwidth-sm mt-6">
    <div class="mud-paper mud-elevation-4 mud-grid mud-grid-spacing-xs-3 mud-grid-justify-xs-flex-start">

        <div class="mud-card mud-grid-item mud-grid-item-xs-12 mud-grid-item-sm-12">
            <h2 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h2>
            <hr />

            <div role="alert" class="mud-alert mud-alert-text-info mud-elevation-0">
                <div class="mud-alert-position justify-sm-start">
                    <div class="mud-alert-message">
                        You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                        Please enter an email address for this site below and click the Register button to finish
                        logging in.
                    </div>
                </div>
            </div>

            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-4">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                 <div class="form-group mt-4">
                    <button id="submit" type="submit" class="mud-button-root mud-button mud-button-filled mud-button-filled-primary mud-button-filled-size-medium mud-ripple mud-width-full ml-auto">Register</button>
                </div>          
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
