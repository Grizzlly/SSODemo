@page "/roles/new"
@attribute [Authorize(Policy = Policies.CanManageRoles)]

@if (model != null)
{
    <MudText Typo="Typo.h4">Create New</MudText>
    <br />
    <MudPaper Elevation="4">
        <EditForm Model="@model" OnValidSubmit="AddRoleAsync">
            <FluentValidationValidator />           
            <MudCard>
                <MudCardContent>
                   <MudTextField UserAttributes="@(new (){{"id","inputRoleName"}})" Label="Role Name" HelperText="Required"
                      @bind-Value="model.RoleName" For="@(() => model.RoleName)" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton UserAttributes="@(new (){{"id","btnCreate"}})" 
                               ButtonType="ButtonType.Submit" Variant="Variant.Filled"                            
                               Color="Color.Primary" Class="ml-auto">Create</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </MudPaper>
}
