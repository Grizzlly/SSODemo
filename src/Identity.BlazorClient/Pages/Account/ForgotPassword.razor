@page "/Account/ForgotPassword"
@attribute [AllowAnonymous]

<MudText Typo="Typo.h4">Forgot your password ?</MudText>
<br />
<MudPaper Elevation="4">
    <EditForm Model="@model" OnValidSubmit="SendPasswordResetLinkAsync">
        <DataAnnotationsValidator/>
        <MudCard>
            <MudCardContent>
                <MudTextField Label="Registered Email" Class="mt-3" @bind-Value="model.Email" autocomplete="username"
                              For="@(() => model.Email)" InputType="InputType.Email" />
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Send Reset Link</MudButton>
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudPaper>